<h1>Zombie App</h1>
<%if current_user%>

<%= current_user.name%>
<div style="width:400px;height:auto">
<%= cl_image_tag(current_user.image.key ,style:'width:100%', :cloud_name => Rails.application.credentials[Rails.env.to_sym][:cloud_name] ) %>
</div>
<%= link_to 'Sign out', destroy_user_session_path, method: :delete ,class:"btn btn-outline-danger"%>

<% else %>
<%= link_to 'Log in', new_user_session_path ,class:"btn btn-outline-success"%>
<%= link_to 'Sign up', new_user_registration_path ,class:"btn btn-outline-secondary"%>
<% end %>




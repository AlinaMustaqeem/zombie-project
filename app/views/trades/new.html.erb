<div class =' container-fluid cont_b mt-3'>
  <h1 class='text-center'>Trading</h1>
  <br>
  <br>
  <div class="d-flex bd-highlight">
    <div class="p-2 w-50 bd-highlight text-center border">
      <h3><%= @user.name%>'s Inventory</h3>
    </div>
    <div class="p-2 w-50 flex-shrink-1 bd-highlight text-center border">
      <h3>My Inventory</h3>
    </div>
  </div>
  <div class="d-flex bd-highlight">
    <div class="p-2 w-50 bd-highlight border"><%=render 'inventoryTable', :user => @user%></div>
    <div class="p-2 w-50 flex-shrink-1 bd-highlight border"><%=render 'inventoryTable', :user => current_user %></div>
  </div>
  <div class="d-flex bd-highlight mt-4">
    <div class="p-2 w-50 bd-highlight text-center ">
      <h3>Select Items</h3>
    </div>
    <div class="p-2 w-50 flex-shrink-1 bd-highlight text-center">
      <h3>Exchange with</h3>
    </div>
  </div>
  <div class="d-flex bd-highlight mt-4 ">
    <div class="p-2 w-100 bd-highlight text-center border">
      <%=render 'trade_points', :user => current_user%>
    </div>
  </div>

</div>
